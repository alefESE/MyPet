<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projetolp3.mypet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground_mypet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mypet_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--splash-->
        <activity
            android:name="com.projetolp3.presenter.view.activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <!--main-->
        <activity
            android:name="com.projetolp3.presenter.view.activity.MainActivity"
            android:label="@string/app_name">

        </activity>

        <activity android:name="com.projetolp3.presenter.view.activity.AddActivity" />


    </application>

</manifest>